{
	"name": "I4All",
	"description": "Making Web Accessible 4 All",
	"version": "1.0",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["activeTab", "clipboardRead", "storage"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*", "file://*/*"],
			"js": ["contentScript.js", "jquery-3.1.0.min.js"]
		}
	],
	"icons": {
		"16": "icon.png",
		"32": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	  }
}
