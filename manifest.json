{
	"name": "I4All",
	"description": "Making Web Accessible 4 All",
	"version": "1.0",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["tabs", "clipboardRead", "storage", "tts"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*", "file://*/*"],

			"css": ["contentCss.css"],
			"js": ["jquery-3.1.0.min.js", "jquery.lettering-0.6.1.min.js", "contentScript.js"]
		}
	],

	"icons": {
		"16": "icon.png",
		"32": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"web_accessible_resources": [
		{
			"resources": ["scripts/css/fonts/Sign-Language.ttf", "scripts/css/*"],
			"matches": ["http://*/*", "https://*/*", "file://*/*"]
		}
	]
}
